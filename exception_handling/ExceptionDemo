public class ExceptionDemo {
    public static void main(String[] args) {
        try {
            int age = 10;
            String employeeName = "chola";

            if (age > 50) {
                throw new ArithmeticException("employee age is greater than 50");
            } else if (employeeName.isEmpty()) {
                System.out.println("name of employee must not be empty");
            } else {
                System.out.println("employee is below 50");
            }
        } catch (ArithmeticException e) {
            System.out.println("Caught an ArithmeticException: " + e.getMessage());
        } finally {
            System.out.println("Finally block executed");
        }
    }
}
